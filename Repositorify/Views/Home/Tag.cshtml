@model List<Repositorify.Models.ViewModels.ImageViewModel>

@{
    ViewBag.Title = "Repositorify ~ Tag";
}

@{ 
    var containerClass = "container";
    if (Model != null && Model.Count > 0)
    {
        containerClass = "container-md";
    }
} 
<div class="@containerClass h-100">
    <div class="row h-100 align-items-center">
        <div class="col text-center">
            @if (Model == null || Model.Count == 0)
            {
                <div class="row">
                    <div class="col">
                        <h1 class="header">
                            <i class="fas fa-archive"></i>
                            Repositorify
                        </h1>
                        <h2>No images found for this tag</h2>
                    </div>
                </div>
                <div class="row mt-1">
                    <div class="col">
                        <a href="/Home" class="btn btn-light">
                            <i class="fas fa-arrow-left"></i>
                            Go Back
                        </a>
                    </div>
                </div>

                <script>
                    $(document).ready(function () {
                        $('.header').fitText(0.6);
                    });
                </script>
            }
            else
            {
                <div class="card text-white bg-custom">
                    <div class="card-header">
                        <a href="/" class="header" style="font-size: 50px;">
                            <i class="fas fa-archive"></i>
                            Repositorify
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var image in Model)
                            {
                                <div class="col-lg-2 col-md-4">
                                    <div class="card text-white bg-light mb-3" style="max-width: 128px;">
                                        <div class="card-img-container">
                                            <img src="@image.Thumbnail" class="card-img-top" />
                                        </div>
                                        <div class="card-body">
                                            @foreach (var tag in image.Tags)
                                            {
                                                <a href="/Home/Tag/@tag">
                                                    <span class="badge badge-pill badge-dark py-1">@tag</span>
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
        
                

